generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Required Models
// ============================================

// Initial Schema:
// Includes NextAuth required tables (Account, Session, VerificationToken)
// Uses cuid() for IDs (collision-resistant, URL-safe)
// Indexes on foreign keys for query performance
// Json fields for flexible data (questionnaire responses, preferences)

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// User Model (Enhanced)
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Bcrypt hashed password
  emailVerified DateTime? // NULL until user verifies via email link
  
  // Required at Registration
  firstName     String    // Required for all accounts
  lastName      String    // Required for all accounts
  age           Int?      // User's age (required for matching, optional for Cupids)
  acceptedTerms DateTime  // NEW: Timestamp when user accepted T&C
  
  // User Role Flags
  isCupid       Boolean   @default(false) // Can create matches for others
  isBeingMatched Boolean  @default(true)  // Participating in matching (default true for new users)
  isAdmin       Boolean   @default(false) // Has admin dashboard access
  isTestUser    Boolean   @default(false) // Generated test user (can be bulk deleted)
  lastActiveDashboard String @default("match") // 'match' or 'cupid' - tracks which dashboard was last active
  preferredCandidateEmail String? // Cupid's preferred candidate email (optional)
  
  // Profile Information
  displayName   String?   // Shown to matches, defaults to firstName
  cupidDisplayName String? // Display name when acting as a Cupid (defaults to displayName)
  major         String?   // Optional, from signup or profile
  interests     String?   @db.Text // Hobbies and interests (used for matching)
  bio           String?   @db.Text // Short bio (used minimally for matching)
  profilePicture String?  // Cloudinary URL for profile picture
  pointOfContact String?  // Optional contact info (social media, email, etc.) to show to matches
  
  // Profile Visibility Settings
  showBioToMatches Boolean @default(true)  // Whether to display bio to matches
  showProfilePicToMatches Boolean @default(true) // Whether to display profile pic to matches
  showInterestsToMatches Boolean @default(true)  // Whether to display interests to matches
  showPointOfContactToMatches Boolean @default(true) // Whether to display point of contact to matches
  
  // Tutorial Completion Tracking (per-user)
  dashboardTutorialCompleted Boolean @default(false) // Match dashboard tutorial
  profileTutorialCompleted Boolean @default(false)   // Profile page tutorial
  questionnaireTutorialCompleted Boolean @default(false) // Questionnaire tutorial
  cupidPortalTutorialCompleted Boolean @default(false)   // Cupid matching portal tutorial
  
  // Legacy fields (keeping for backwards compatibility)
  yearOfStudy   Int?
  
  // Preferences stored as JSONB (for complex matching criteria)
  // Note: Consider moving this entirely to Questionnaire model
  preferences   Json?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Relations
  accounts      Account[]
  sessions      Session[]

  // Application Relations
  questionnaire Questionnaire?
  questionnaireResponse QuestionnaireResponse?
  matchesGiven  Match[]   @relation("UserMatches")
  matchesReceived Match[] @relation("MatchedUser")
  uploads       Upload[]
  cupidProfile  CupidProfile?
  
  // Matching System Relations
  compatibilityScoresGiven CompatibilityScore[] @relation("UserCompatibilityScores")
  compatibilityScoresReceived CompatibilityScore[] @relation("TargetCompatibilityScores")
  cupidAssignments CupidAssignment[] @relation("CupidAssignments")
  assignedAsCandidates CupidAssignment[] @relation("AssignedCandidates")
  textEmbeddings TextEmbedding[]
  cupidProfileSummary CupidProfileSummary?

  @@index([email])
}

// ============================================
// Application-Specific Models
// ============================================

model Questionnaire {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  responses Json     // JSONB field storing all questionnaire answers
  
  completedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model QuestionnaireResponse {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // V2 Format (Split-Screen): Encrypted JSON with nested structure
  // Each question has: { ownAnswer, preference: { type, value, doesntMatter }, importance, dealbreaker }
  // Example: { "q7": { ownAnswer: 2, preference: { type: "similar", doesntMatter: false }, importance: 4, dealbreaker: false } }
  // Legacy V1 Format (Deprecated): Simple key-value { "q1": "man", "q2": "pizza", ... }
  responses   String   @db.Text // Encrypted JSON responses
  
  // V2: importance is now stored within each question's response object (above)
  // Legacy V1: This field stores separate importance ratings { "q1": 3, "q5": 5 } (1-5 scale)
  // This field may be NULL for V2 responses and will be deprecated in future
  importance  String?  @db.Text // Encrypted JSON importance ratings (V1 only, deprecated)
  
  isSubmitted Boolean  @default(false)  // false = draft, true = locked
  submittedAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([isSubmitted])
}

model Match {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation("UserMatches", fields: [userId], references: [id], onDelete: Cascade)
  
  matchedUserId   String
  matchedUser     User     @relation("MatchedUser", fields: [matchedUserId], references: [id], onDelete: Cascade)
  
  // Match type: 'algorithm' | 'cupid_sent' | 'cupid_received'
  matchType          String
  compatibilityScore Float?   // Only for algorithm matches, null for cupid matches
  cupidId            String?  // If cupid match, ID of cupid who made it
  cupidComment       String?  // Rationale from cupid for why this match was made
  batchNumber        Int      // Always 1 for 2026 (single batch)
  
  // Status: 'accepted' (algorithm/accepted cupid match), 'pending' (cupid match awaiting response), 'declined' (rejected cupid match)
  status          String   @default("accepted")  // Algorithm matches auto-accepted
  
  revealedAt      DateTime?  // Null until matches are revealed
  createdAt       DateTime @default(now())
  respondedAt     DateTime?  // When user responded to match request (for cupid matches)

  @@unique([userId, matchedUserId, batchNumber, matchType]) // Prevent duplicate matches per type in same batch
  @@index([userId, batchNumber])
  @@index([matchedUserId, batchNumber])
}

model Upload {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  cloudinaryId String   @unique
  url          String
  type         String   // 'receipt' | 'story'
  
  fileSize     Int
  mimeType     String
  
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([type])
}

model CupidProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  approved        Boolean  @default(false)
  matchesCreated  Int      @default(0)
  
  createdAt       DateTime @default(now())
}


model RateLimit {
  id         String   @id @default(cuid())
  identifier String   // Email address or IP
  action     String   // 'resend-verification', 'login-attempt', etc.
  attempts   Int      @default(1)
  windowStart DateTime @default(now())
  expiresAt  DateTime
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@unique([identifier, action])
  @@index([identifier, action])
  @@index([expiresAt])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expires    DateTime
  used       Boolean  @default(false)
  
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([token])
}

// ===========================================
// MATCHING SYSTEM MODELS
// ===========================================

// Stores detailed compatibility breakdown between two users
model CompatibilityScore {
  id              String   @id @default(cuid())
  
  userId          String
  user            User     @relation("UserCompatibilityScores", fields: [userId], references: [id], onDelete: Cascade)
  
  targetUserId    String
  targetUser      User     @relation("TargetCompatibilityScores", fields: [targetUserId], references: [id], onDelete: Cascade)
  
  // Section scores (0-100 scale before weighting)
  section1Score   Float    // Icebreakers & Fun
  section2Score   Float    // What I'm Like  
  section3Score   Float    // What I'm Looking For
  section5Score   Float    // Open-Ended (text similarity)
  
  // Weighted total score (0-100)
  totalScore      Float
  
  // Bidirectional average (with target's score toward user)
  bidirectionalScore Float?
  
  batchNumber     Int      // Always 1 for 2026 (single batch)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, targetUserId, batchNumber])
  @@index([userId, batchNumber])
  @@index([targetUserId, batchNumber])
  @@index([totalScore])
}

// Tracks cupid assignments - each cupid is assigned ONE candidate
// and must select the best match from the candidate's top 5 compatible people
model CupidAssignment {
  id              String   @id @default(cuid())
  
  cupidUserId     String
  cupidUser       User     @relation("CupidAssignments", fields: [cupidUserId], references: [id], onDelete: Cascade)
  
  // The candidate assigned to this cupid
  candidateId     String
  candidate       User     @relation("AssignedCandidates", fields: [candidateId], references: [id], onDelete: Cascade)
  
  // Top 25 potential matches for this candidate
  // Stored as JSON array: [{ userId: "...", score: 85.5 }, { userId: "...", score: 82.3 }, ...]
  potentialMatches Json
  
  // Rejected matches - array of userIds that cupid marked as "Not a Match"
  // Stored as JSON array: ["userId1", "userId2", ...]
  rejectedMatches Json @default("[]")
  
  // Number of matches revealed to cupid (for progressive reveal)
  revealedCount Int @default(5)
  
  // Cupid's selection - which userId from potentialMatches they chose
  selectedMatchId String?
  selectionReason String?  @db.Text
  
  batchNumber     Int
  
  decidedAt       DateTime?
  createdAt       DateTime @default(now())
  
  @@unique([cupidUserId, candidateId, batchNumber])
  @@index([cupidUserId, batchNumber])
  @@index([candidateId, batchNumber])
  @@index([selectedMatchId])
}

// Stores text embeddings for open-ended questions
model TextEmbedding {
  id              String   @id @default(cuid())
  
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  questionId      String   // e.g., "Q60", "Q61", "Q62", "Q63"
  
  // Embedding vector stored as JSON array of floats
  embedding       Json     // Float array from sentence-transformers
  embeddingModel  String   @default("all-MiniLM-L6-v2")
  
  // Original text hash for cache invalidation
  textHash        String
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, questionId])
  @@index([userId])
  @@index([questionId])
}

// AI-generated profile summaries for cupids
model CupidProfileSummary {
  id              String   @id @default(cuid())
  
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // AI-generated summary of user's questionnaire responses
  summary         String   @db.Text
  
  // Key traits extracted for quick reference
  keyTraits       Json     // Array of trait strings
  
  // Relationship preferences summary
  lookingFor      String   @db.Text
  
  // Model used for generation
  aiModel         String   @default("gpt-3.5-turbo")
  
  // Version for cache invalidation
  responseHash    String   // Hash of questionnaire responses used
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId])
  @@index([userId])
}

// Tracks matching batch runs
model MatchingBatch {
  id              String   @id @default(cuid())
  
  batchNumber     Int      @unique  // Always 1 for 2026 (single batch)
  
  // Status: 'pending' | 'scoring' | 'matching' | 'cupid_review' | 'completed'
  status          String   @default("pending")
  
  // Stats
  totalUsers      Int      @default(0)
  totalPairs      Int      @default(0)  // Scored pairs
  algorithmMatches Int     @default(0)
  cupidMatches    Int      @default(0)
  
  // Timestamps
  scoringStartedAt DateTime?
  scoringCompletedAt DateTime?
  matchingStartedAt DateTime?
  matchingCompletedAt DateTime?
  revealedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}