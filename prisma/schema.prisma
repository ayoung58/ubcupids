generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Required Models
// ============================================

// Initial Schema:
// Includes NextAuth required tables (Account, Session, VerificationToken)
// Uses cuid() for IDs (collision-resistant, URL-safe)
// Indexes on foreign keys for query performance
// Json fields for flexible data (questionnaire responses, preferences)

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// User Model (Enhanced)
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Bcrypt hashed password
  emailVerified DateTime? // NULL until user verifies via email link
  
  // Required at Registration
  firstName     String    // Changed from String? to String (required)
  lastName      String    // Changed from String? to String (required)
  age           Int       // User's age (required for better matching)
  acceptedTerms DateTime  // NEW: Timestamp when user accepted T&C
  
  // User Role Flags
  isCupid       Boolean   @default(false) // Can create matches for others
  isBeingMatched Boolean  @default(true)  // Participating in matching (default true for new users)
  
  // Profile Information
  displayName   String?   // Shown to matches, defaults to firstName
  major         String?   // Optional, from signup or profile
  interests     String?   @db.Text // Hobbies and interests (used for matching)
  bio           String?   @db.Text // Short bio (used minimally for matching)
  profilePicture String?  // Cloudinary URL for profile picture
  
  // Profile Visibility Settings
  showBioToMatches Boolean @default(true)  // Whether to display bio to matches
  showProfilePicToMatches Boolean @default(true) // Whether to display profile pic to matches
  showInterestsToMatches Boolean @default(true)  // Whether to display interests to matches
  
  // Legacy fields (keeping for backwards compatibility)
  yearOfStudy   Int?
  
  // Preferences stored as JSONB (for complex matching criteria)
  // Note: Consider moving this entirely to Questionnaire model
  preferences   Json?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Relations
  accounts      Account[]
  sessions      Session[]

  //Application Relations
  questionnaire Questionnaire?
  questionnaireResponse QuestionnaireResponse?
  matchesGiven  Match[]   @relation("UserMatches")
  matchesReceived Match[] @relation("MatchedUser")
  uploads       Upload[]
  cupidProfile  CupidProfile?

  @@index([email])
}

// ============================================
// Application-Specific Models
// ============================================

model Questionnaire {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  responses Json     // JSONB field storing all questionnaire answers
  
  completedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model QuestionnaireResponse {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  responses   String   @db.Text // Encrypted JSON: { "q0.1": "man", "q1": "pizza", ... }
  importance  String?  @db.Text // Encrypted JSON: { "q1": 3, "q5": 5, ... } (1-5 scale)
  
  isSubmitted Boolean  @default(false)  // false = draft, true = locked
  submittedAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([isSubmitted])
}

model Match {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation("UserMatches", fields: [userId], references: [id], onDelete: Cascade)
  
  matchedUserId   String
  matchedUser     User     @relation("MatchedUser", fields: [matchedUserId], references: [id], onDelete: Cascade)
  
  compatibilityScore Float // Changed from Int to Float for decimal precision
  cupidType          String // 'algorithm' | 'human'
  cupidId            String?
  batchNumber        Int    // 1 or 2 (Feb 1 or Feb 7)
  
  revealedAt      DateTime @default(now())
  createdAt       DateTime @default(now())

  @@unique([userId, matchedUserId, batchNumber]) // Prevent duplicate matches in same batch
  @@index([userId])
  @@index([matchedUserId])
}

model Upload {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  cloudinaryId String   @unique
  url          String
  type         String   // 'receipt' | 'story'
  
  fileSize     Int
  mimeType     String
  
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([type])
}

model CupidProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  approved        Boolean  @default(false)
  matchesCreated  Int      @default(0)
  
  createdAt       DateTime @default(now())
}


model RateLimit {
  id         String   @id @default(cuid())
  identifier String   // Email address or IP
  action     String   // 'resend-verification', 'login-attempt', etc.
  attempts   Int      @default(1)
  windowStart DateTime @default(now())
  expiresAt  DateTime
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@unique([identifier, action])
  @@index([identifier, action])
  @@index([expiresAt])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expires    DateTime
  used       Boolean  @default(false)
  
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([token])
}